unit Principal.View;

interface

uses
  System.SysUtils, System.Classes, Vcl.Controls, Vcl.Forms, Vcl.StdCtrls,
  Vcl.ExtCtrls, Vcl.ImgList, Vcl.Imaging.pngimage, Vcl.Buttons, Vcl.Themes,
  Vcl.Styles, Vcl.BaseImageCollection, Vcl.VirtualImageList, System.ImageList;

type
  TfPrincipal = class(TForm)
    ImageListIcons: TImageList;
    btCadastroPaciente: TButton;
    btSair: TButton;
    btCadastrarServicoFarmaceutico: TButton;
    btCadastroFarmaceutico: TButton;
    btCadastroProcedimentos: TButton;
    procedure FormCreate(Sender: TObject);
    procedure btCadastroPacienteClick(Sender: TObject);
    procedure btCadastroFarmaceuticoClick(Sender: TObject);
    procedure btSairClick(Sender: TObject);
    procedure btCadastroProcedimentosClick(Sender: TObject);
    procedure btCadastrarServicoFarmaceuticoClick(Sender: TObject);
  public
    procedure AplicarIcones;
  end;

var
  fPrincipal: TfPrincipal;

implementation

uses
  Cadastro.Paciente.View, Cadastro.Farmaceutico.View, Cadastro.Procedimentos.View,
  Faturamento.ServicoFarmaceutico.View, Lista.ServicoFarmaceutico.View;

{$R *.dfm}

procedure TfPrincipal.btCadastroFarmaceuticoClick(Sender: TObject);
begin
  fCadastroFarmaceutico := TfCadastroFarmaceutico.Create(Self);
  try
    fCadastroFarmaceutico.ShowModal;
  finally
    fCadastroFarmaceutico.Free;
  end;
end;

procedure TfPrincipal.btCadastroPacienteClick(Sender: TObject);
begin
  fCadastroPaciente := TfCadastroPaciente.Create(Self);
  try
    fCadastroPaciente.ShowModal;
  finally
    fCadastroPaciente.Free;
  end;
end;

procedure TfPrincipal.btCadastroProcedimentosClick(Sender: TObject);
begin
  frmProcedimentos := TfrmProcedimentos.Create(Self);
  try
    frmProcedimentos.ShowModal;
  finally
    frmProcedimentos.Free;
  end;
end;

procedure TfPrincipal.btCadastrarServicoFarmaceuticoClick(Sender: TObject);
begin
  fListaServicoFarmaceutico := TfListaServicoFarmaceutico.Create(Self);
  try
    fListaServicoFarmaceutico.ShowModal;
  finally
    fListaServicoFarmaceutico.Free;
  end;
end;

procedure TfPrincipal.btSairClick(Sender: TObject);
begin
   Close;
end;

procedure TfPrincipal.FormCreate(Sender: TObject);
begin
  AplicarIcones;
end;

procedure TfPrincipal.AplicarIcones;
begin
  btCadastroPaciente.ImageIndex := 0;
  btCadastroFarmaceutico.ImageIndex := 1;
  btCadastroProcedimentos.ImageIndex := 3;
  btCadastrarServicoFarmaceutico.ImageIndex := 4;
  btSair.ImageIndex := 2;

  btCadastroPaciente.Images := ImageListIcons;
  btCadastroFarmaceutico.Images := ImageListIcons;
  btCadastrarServicoFarmaceutico.Images := ImageListIcons;
  btSair.Images := ImageListIcons;
end;


end.

