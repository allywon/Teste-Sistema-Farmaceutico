function TPessoaController.Excluir(Id: Integer; Tipo: TPessoaTipo): Boolean;
var
  lResource: string;
  lResponseContent: string;
begin
  lResource := Format('%s/%d', [GetResourceName(Tipo), Id]);

  lResponseContent := ExecutarRequisicao(rmDELETE, lResource, '');

  Result := (FRESTResponse.StatusCode in [200, 204]);
end;

end.

