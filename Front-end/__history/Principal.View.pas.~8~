unit Principal.View;

interface

uses
  System.SysUtils, System.Classes, Vcl.Controls, Vcl.Forms, Vcl.StdCtrls,
  Vcl.ExtCtrls, Vcl.ImgList, Vcl.Imaging.pngimage, Vcl.Buttons, Vcl.Themes,
  Vcl.Styles, Vcl.BaseImageCollection, Vcl.VirtualImageList, System.ImageList;

type
  TfPrincipal = class(TForm)
    btnPaciente: TButton;
    btnFarmaceutico: TButton;
    btnConsulta: TButton;
    btnSair: TButton;
    ImageListIcons: TImageList;
    Button1: TButton;
    procedure FormCreate(Sender: TObject);
    procedure btnPacienteClick(Sender: TObject);
    procedure btnFarmaceuticoClick(Sender: TObject);
    procedure btnSairClick(Sender: TObject);
  public
    procedure AplicarIcones;
  end;

var
  fPrincipal: TfPrincipal;

implementation

uses
  Cadastro.Paciente.View, Cadastro.Farmaceutico.View;

{$R *.dfm}

procedure TfPrincipal.FormCreate(Sender: TObject);
begin
  AplicarIcones;
end;

procedure TfPrincipal.AplicarIcones;
begin
  btnPaciente.ImageIndex := 0;
  btnFarmaceutico.ImageIndex := 1;
  btnConsulta.ImageIndex := 2;
  btnSair.ImageIndex := 3;

  btnPaciente.Images := ImageListIcons;
  btnFarmaceutico.Images := ImageListIcons;
  btnConsulta.Images := ImageListIcons;
  btnSair.Images := ImageListIcons;
end;

procedure TfPrincipal.btnPacienteClick(Sender: TObject);
begin
  FormCadastroPaciente := TFormCadastroPaciente.Create(Self);
  try
    FormCadastroPaciente.ShowModal;
  finally
    FormCadastroPaciente.Free;
  end;
end;

procedure TfPrincipal.btnFarmaceuticoClick(Sender: TObject);
begin
  FormCadastroFarmaceutico := TFormCadastroFarmaceutico.Create(Self);
  try
    FormCadastroFarmaceutico.ShowModal;
  finally
    FormCadastroFarmaceutico.Free;
  end;
end;

procedure TfPrincipal.btnSairClick(Sender: TObject);
begin
  Close;
end;

end.

